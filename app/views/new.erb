<h1>Create a Team and Heroes!</h1>
<form method="POST" action="/teams">
  <p>
    <label for="team[name]">Team Name:</label>
    <input type="text" name="team[name]" />
  </p>
  <p>
    <label for="team[motto]">Team Motto:</label>
    <input type="text" name="team[motto]" />
  </p>
  <br>
  <h2>Hero 1</h2>
  <p>
    <label for="team[hero][][name]">Hero's Name:</label>
    <input type="text" name="team[hero][][name]" id="member1_name" />
  </p>
  <p>
    <label for="team[hero][][power]">Hero's Power:</label>
    <input type="text" name="team[hero][][power]" id="member1_power" />
  </p>
  <p>
    <label for="team[hero][][biography]">Hero's Biography:</label>
    <input type="text" name="team[hero][][biography]" id="member1_bio" />
  </p>
  <br>
  <h2>Hero 2</h2>
  <p>
    <label for="team[hero][][name]">Hero's Name:</label>
    <input type="text" name="team[hero][][name]" id="member2_name" />
  </p>
  <p>
    <label for="team[hero][][power]">Hero's Power:</label>
    <input type="text" name="team[hero][][power]" id="member2_power" />
  </p>
  <p>
    <label for="team[hero][][biography]">Hero's Biography:</label>
    <input type="text" name="team[hero][][biography]" id="member2_bio" />
  </p>
  <br>
  <h2>Hero 3</h2>
  <p>
    <label for="team[hero][][name]">Hero's Name:</label>
    <input type="text" name="team[hero][][name]" id="member3_name" />
  </p>
  <p>
    <label for="team[hero][][power]">Hero's Power:</label>
    <input type="text" name="team[hero][][power]" id="member3_power" />
  </p>
  <p>
    <label for="team[hero][][biography]">Hero's Biography:</label>
    <input type="text" name="team[hero][][biography]" id="member3_bio" />
  </p>
  <input type="submit" value="submit" />
</form>

